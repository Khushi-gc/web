<style>
  :root {
    --primary-purple: #6200EE; /* Approximated from visual */
    --light-purple-bg: #F3E5F5;
    --table-header-bg: #F5E6FE; /* Light lavender */
    --check-color: #6200EE;
    --check-bg: #E8DEFF;
    --cross-color: #D32F2F;
    --cross-bg: #FFEBEE;
    --text-dark: #1F2937;
    --text-light: #6B7280;
    --border-color: rgba(98, 0, 238, 0.1);
  }

  .family-roles {
    position: relative;
    width: 100%;
    color: white;
    overflow: hidden;
    padding-bottom: 4rem;
  }

  /* Video Background */
  .video-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 600px; /* Height of the purple header area */
    z-index: -1;
    overflow: hidden;
    background: var(--primary-purple);
  }

  .video-bg video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-bg .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(98, 0, 238, 0.9); /* Purple overlay */
  }

  .content-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  /* Header Section */
  .header-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    gap: 2rem;
  }

  .text-content {
    flex: 1;
    min-width: 300px;
  }

  .text-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
    text-transform: uppercase;
  }

  .text-content p {
    font-size: 1rem;
    line-height: 1.6;
    max-width: 400px;
    opacity: 0.9;
  }

  .image-content {
    flex: 0 0 250px;
  }

  .image-content img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* Comparison Table (Desktop) */
  .comparison-table {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    color: var(--text-dark);
  }

  .table-header {
    display: flex;
    background: var(--table-header-bg);
    border-bottom: 1px solid var(--border-color);
  }

  .table-row {
    display: flex;
    border-bottom: 1px solid var(--border-color);
    transition: background 0.2s;
  }

  .table-row:last-child {
    border-bottom: none;
  }

  .table-row:hover {
    background: #FAFAFA;
  }

  .col-feature {
    flex: 2;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    font-size: 0.95rem;
    color: var(--text-dark);
    border-right: 1px solid var(--border-color);
  }

  .col-role {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .table-header .col-feature,
  .table-header .col-role {
    font-weight: 600;
    color: var(--primary-purple);
    font-size: 1rem;
    border-right: none; /* No vertical borders in header for cleaner look */
  }
  
  .table-row .col-feature {
     color: var(--text-light);
  }

  /* Icons */
  .icon {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: bold;
  }

  .icon.check {
    background: var(--check-bg);
    color: var(--check-color);
  }

  .icon.cross {
    background: var(--cross-bg);
    color: var(--cross-color);
  }

  /* Mobile Cards */
  .mobile-cards {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .role-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    color: var(--text-dark);
  }

  .card-header {
    background: var(--table-header-bg);
    padding: 1.5rem;
    text-align: center;
    font-weight: 600;
    color: var(--primary-purple);
  }

  .card-body {
    padding: 0 1.5rem;
  }

  .permission-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .permission-item:last-child {
    border-bottom: none;
  }

  .permission-item p {
    font-size: 0.9rem;
    color: var(--text-light);
    margin: 0;
    padding-right: 1rem;
    flex: 1;
  }

  /* Utilities */
  .desktop-only { display: block; }
  .mobile-only { display: none; }

  /* Responsive */
  @media (max-width: 900px) {
    .header-section {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .image-content {
      align-self: center;
      margin-top: -3rem; /* Pull image up slightly if needed */
      margin-bottom: 2rem;
    }

    .desktop-only { display: none; }
    .mobile-only { display: flex; }
    
    .video-bg {
        height: 100%; /* Cover full height on mobile if needed, or keeping it short */
        min-height: 800px;
    }
  }
</style>
