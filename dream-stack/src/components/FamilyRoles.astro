<style>
  :root {
    --primary-purple: #6200EE;
    --light-purple-bg: #F3E5F5;
    --table-header-bg: #F5E6FE;
    --text-dark: #1F2937;
    --text-light: #6B7280;
    --border-color: rgba(98, 0, 238, 0.1);
    --highlight-bg: #eaddff;
    --white: #ffffff;
  }

  .comparison-section {
    position: relative;
    width: 100%;
    color: white;
    /* overflow: hidden; Removed to allow sticky headers if needed, but keeping simple for now */
    padding-bottom: 4rem;
  }

  /* Video Background */
  .video-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 600px;
    z-index: -1;
    overflow: hidden;
    background: var(--primary-purple);
  }

  .video-bg video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-bg .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(98, 0, 238, 0.9);
  }

  .content-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  /* Header Section */
  .header-section {
    margin-bottom: 4rem;
    text-align: center;
  }

  .text-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .text-content h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .text-content p {
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0.95;
  }

  /* Comparison Table (Desktop) */
  .comparison-table {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    color: var(--text-dark);
  }

  .table-header {
    display: flex;
    background: var(--table-header-bg);
    border-bottom: 1px solid var(--border-color);
  }

  .table-row {
    display: flex;
    border-bottom: 1px solid var(--border-color);
  }

  .table-row:last-child {
    border-bottom: none;
  }

  /* Columns */
  .col-category {
    flex: 0 0 20%;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--primary-purple);
    border-right: 1px solid var(--border-color);
    background: #fafafa;
  }
  
  .table-header .col-category {
      background: transparent;
      color: var(--primary-purple);
  }

  .col-standard {
    flex: 1;
    padding: 1.5rem;
    font-size: 1rem;
    color: var(--text-light);
    border-right: 1px solid var(--border-color);
    display: flex;
    align-items: center;
  }

  .col-prime {
    flex: 1;
    padding: 1.5rem;
    font-size: 1rem;
    color: var(--text-dark);
    background: rgba(98, 0, 238, 0.03); /* Subtle highlight */
    display: flex;
    align-items: center;
  }

  .table-header .col-standard,
  .table-header .col-prime {
      font-weight: 700;
      font-size: 1.1rem;
      color: var(--primary-purple);
      background: transparent;
  }

  /* Mobile Cards */
  .mobile-cards {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .comparison-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    color: var(--text-dark);
  }

  .card-header {
    background: var(--primary-purple);
    color: white;
    padding: 1rem 1.5rem;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .card-body {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .comparison-item h4 {
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.5rem;
      color: var(--text-light);
  }

  .comparison-item.prime h4 {
      color: var(--primary-purple);
  }

  .comparison-item p {
      font-size: 1rem;
      line-height: 1.5;
      margin: 0;
  }

  /* Utilities */
  .desktop-only { display: block; }
  .mobile-only { display: none; }

  /* Responsive */
  @media (max-width: 900px) {
    .desktop-only { display: none; }
    .mobile-only { display: flex; }
    
    .video-bg {
        height: 100%;
        min-height: 500px;
    }

    .content-container {
        padding: 3rem 1.5rem;
    }
  }
</style>
