<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    function initFooter() {
        // Parallax Watermark - subtle to maintain line alignment
        gsap.to("#footerWatermark", {
            y: -40,
            opacity: 0.6,
            scrollTrigger: {
                trigger: ".footer-bottom",
                start: "top bottom",
                end: "bottom center",
                scrub: 2,
            },
        });

        // Animate Content Pieces
        const ctaTl = gsap.timeline({
            scrollTrigger: {
                trigger: ".cta-content",
                start: "top 85%",
            },
        });

        ctaTl
            .from(".cta-heading", {
                y: 40,
                opacity: 0,
                duration: 0.8,
                ease: "power3.out",
            })
            .from(
                ".cta-subtext",
                { y: 20, opacity: 0, duration: 0.8, ease: "power3.out" },
                "-=0.6",
            )
            .from(
                ".demo-button",
                {
                    scale: 0.9,
                    opacity: 0,
                    duration: 0.6,
                    ease: "back.out(1.7)",
                },
                "-=0.4",
            );

        // Founder Section Reveal
        gsap.from(".founder-note p", {
            opacity: 0,
            y: 20,
            stagger: 0.15,
            duration: 1,
            scrollTrigger: {
                trigger: "#founderNote",
                start: "top 75%",
            },
        });

        // Signature Draw
        gsap.from(".sig-path", {
            strokeDasharray: 1000,
            strokeDashoffset: 1000,
            duration: 2.5,
            ease: "sine.inOut",
            scrollTrigger: {
                trigger: ".founder-footer",
                start: "top 85%",
            },
        });
    }

    document.addEventListener("DOMContentLoaded", initFooter);
</script>
