<section class="money-confidence">
  <div class="container">
    <div class="header-section reveal-header">
      <div class="title-col">
        <h2>MONEY CONFIDENCE,<br> RIGHT IN THEIR POCKET</h2>
      </div>
      <div class="desc-col">
        <p>Give your kids a space to spend and save how they like, so they can learn money skills and get financial independence from the get go.</p>
      </div>
    </div>

    <!-- Expanding Cards Gallery -->
    <div class="cards-gallery reveal-cards">
      {cards.map((card, index) => (
        <div class="card" style={`background-image: url('${card.image}'); background-color: #f3f4f6;`}>
          <div class="card-content">
            <div class="icon-title text-header">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="icon">
                <path fill-rule="evenodd" d={card.iconPath} clip-rule="evenodd"></path>
              </svg>
              <h4>{card.title}</h4>
            </div>
            
            <div class="text-body">
              <p>{card.desc}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .money-confidence {
    width: 100%;
    padding: 6rem 1rem;
    background: #fff;
    color: #000;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header */
  .header-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  @media (min-width: 1024px) {
    .header-section {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .title-col h2 {
    font-size: 2.5rem;
    line-height: 1.1;
    font-weight: 700;
    text-transform: uppercase;
    color: #1a1a1a;
  }

  @media (min-width: 1024px) {
    .title-col h2 {
      font-size: 3.5rem;
      max-width: 650px;
    }
  }

  .desc-col p {
    font-size: 1.125rem;
    color: #6B7280;
    line-height: 1.6;
    max-width: 500px;
  }

  /* Cards Gallery */
  .cards-gallery {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    height: auto;
  }

  @media (min-width: 1024px) {
    .cards-gallery {
      flex-direction: row;
      height: 600px; /* Fixed height for desktop to allow expansion */
      gap: 1.5rem;
    }
  }

  .card {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    min-height: 480px;
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    cursor: pointer;
    flex: 1;
  }

  @media (min-width: 1024px) {
    .card:hover {
      flex: 3; /* Expand on hover */
    }
  }

  /* Card Content Box */
  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
  }
  
  /* Inner white box */
  .card-content .text-header,
  .card-content .text-body {
    background: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
     box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .card-content {
      /* We actually want the whole block to be the white box in the design, 
         or just a white box at the bottom. 
         Based on snippet: `we-bg-white we-h-[170px]` which moves. */
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 1rem;
  }

  /* Refined Inner Structure matching the reference */
  .card-content {
      padding: 1rem;
  }

  .card-content > div {
       background: white;
       border-radius: 0.5rem;
       padding: 1.25rem;
       transition: transform 0.5s ease;
  }

  /* Mobile view: simple stack */
  .icon {
    width: 2rem;
    height: 2rem;
    fill: #6200EE; /* Primary Purple */
    margin-bottom: 0.5rem;
    flex-shrink: 0;
  }

  .icon-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .icon-title h4 {
      font-size: 1.1rem;
      font-weight: 600;
      color: #6200EE;
      margin: 0;
      line-height: 1.2;
  }

  .text-body {
    display: block;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.5s ease;
  }
  
  .text-body p {
      font-size: 0.9rem;
      color: #6B7280;
      margin: 0.5rem 0 0 0;
  }

  /* Desktop Hover Interactions */
  @media (min-width: 1024px) {
      .card-content > div {
          height: 80px; /* Collapsed height showing only title/icon */
          overflow: hidden;
      }

      .card:hover .card-content > div {
          transform: translateY(-10px);
          height: auto; /* Allow full height */
          min-height: 160px;
      }
      
      .card:hover .text-body {
          max-height: 200px;
          opacity: 1;
      }
      
      .icon-title {
          flex-direction: column;
          align-items: flex-start;
          gap: 0.5rem;
      }
  }

  /* Animations */
  .reveal-header, .reveal-cards {
    opacity: 0;
    transform: translateY(20px);
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    gsap.to('.reveal-header', {
      scrollTrigger: {
        trigger: '.reveal-header',
        start: "top 80%"
      },
      y: 0,
      opacity: 1,
      duration: 1,
      ease: "power3.out"
    });

    gsap.from('.card', {
      scrollTrigger: {
        trigger: '.reveal-cards',
        start: "top 75%"
      },
      y: 50,
      opacity: 0,
      duration: 0.8,
      stagger: 0.2,
      ease: "power2.out"
    });
  });
</script>
