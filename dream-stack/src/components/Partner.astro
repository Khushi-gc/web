    </div>
</section>

<style>
    .partners-section {
        background: #ffffff;
        color: #1a1a1a;
        padding: 6rem 0;
        overflow: hidden;
    }

    .container {
        position: relative;
        z-index: 1;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .pb-100 {
        padding-bottom: 6rem;
    }

    .row {
        display: flex;
        justify-content: center;
        margin-bottom: 3rem;
    }

    .col-center {
        max-width: 800px;
        width: 100%;
    }

    .text-center {
        text-align: center;
    }

    .heading-text {
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #1a1a1a;
        line-height: 1.2;
    }

    .subtext {
        font-size: 1.125rem;
        line-height: 1.7;
        color: #6b7280;
        margin-bottom: 0;
    }

    /* Marquee Styles */
    .marquee-wrapper {
        width: 100%;
        overflow: hidden;
        position: relative;
        margin-top: 3rem;
    }

    /* Gradient fade edges */
    .marquee-wrapper::before,
    .marquee-wrapper::after {
        content: "";
        position: absolute;
        top: 0;
        width: 150px;
        height: 100%;
        z-index: 2;
        pointer-events: none;
    }

    .marquee-wrapper::before {
        left: 0;
        background: linear-gradient(to right, #ffffff 0%, transparent 100%);
    }

    .marquee-wrapper::after {
        right: 0;
        background: linear-gradient(to left, #ffffff 0%, transparent 100%);
    }

    .logo-marquee {
        width: 100%;
        overflow: hidden;
    }

    .marquee-content {
        display: flex;
        gap: 4rem;
        animation: scroll 40s linear infinite;
        width: fit-content;
    }

    .marquee-content.reverse {
        animation: scrollReverse 40s linear infinite;
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes scrollReverse {
        0% {
            transform: translateX(-50%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .marquee-content:hover {
        animation-play-state: paused;
    }

    .logo-item {
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem 2rem;
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        transition: all 0.3s ease;
        min-width: 180px;
        height: 100px;
    }

    .logo-item:hover {
        background: #ffffff;
        border-color: #6200ee;
        transform: translateY(-5px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    }

    .logo-item img {
        max-width: 140px;
        max-height: 60px;
        width: auto;
        height: auto;
        object-fit: contain;
        filter: grayscale(100%);
        opacity: 0.6;
        transition: all 0.3s ease;
    }

    .logo-item:hover img {
        filter: grayscale(0%);
        opacity: 1;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .partners-section {
            padding: 4rem 0;
        }

        .container {
            padding: 0 1.5rem;
        }

        .pb-100 {
            padding-bottom: 4rem;
        }

        .heading-text {
            font-size: 1.75rem;
        }

        .subtext {
            font-size: 1rem;
        }

        .marquee-content {
            gap: 2rem;
            animation-duration: 30s;
        }

        .logo-item {
            min-width: 140px;
            height: 80px;
            padding: 1rem 1.5rem;
        }

        .logo-item img {
            max-width: 100px;
            max-height: 50px;
        }

        .marquee-wrapper::before,
        .marquee-wrapper::after {
            width: 80px;
        }
    }
</style>

<script>
    // Optional: Add pause on hover for better UX
    document.addEventListener("DOMContentLoaded", () => {
        const marquees = document.querySelectorAll(".marquee-content");

        marquees.forEach((marquee) => {
            marquee.addEventListener("mouseenter", () => {
                (marquee as HTMLElement).style.animationPlayState = "paused";
            });

            marquee.addEventListener("mouseleave", () => {
                (marquee as HTMLElement).style.animationPlayState = "running";
            });
        });
    });
</script>
