---

<section class="section container">
    <!-- Global Lenders Section -->
    <div class="partner-group">
        <div class="text-center mb-5">
            <h2 class="heading-md">
                Our <span class="text-orange">Global Lenders</span>
            </h2>
            <p class="section-desc">
                Backed by a trusted network of global financial institutions, we
                connect students with the most competitive loan options.
            </p>
        </div>

        <div class="marquee-wrapper">
            <div class="logo-marquee">
                <div class="marquee-content" id="lendersMarquee">
                    {
                        lenders.map((logo) => (
                            <div class="logo-item">
                                <img src={logo.src.src} alt={logo.alt} />
                            </div>
                        ))
                    }
                    <!-- Duplicate for loop -->
                    {
                        lenders.map((logo) => (
                            <div class="logo-item">
                                <img src={logo.src.src} alt={logo.alt} />
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- University Partners Section -->
    <div class="partner-group mt-large">
        <div class="text-center mb-5">
            <h2 class="heading-md">
                700+ University & <br />
                <span class="text-orange">Channel Partners</span>
            </h2>
            <p class="section-desc">
                Direct work with universities worldwide to offer guaranteed
                admission support and scholarship guidance.
            </p>
        </div>

        <div class="marquee-wrapper">
            <div class="logo-marquee">
                <div class="marquee-content reverse" id="universitiesMarquee">
                    {
                        universities.map((logo) => (
                            <div class="logo-item">
                                <img src={logo.src.src} alt={logo.alt} />
                            </div>
                        ))
                    }
                    <!-- Duplicate for loop -->
                    {
                        universities.map((logo) => (
                            <div class="logo-item">
                                <img src={logo.src.src} alt={logo.alt} />
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .partner-group {
        margin-bottom: 2rem;
        position: relative;
    }

    .mt-large {
        margin-top: 6rem;
    }

    .text-center {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .mb-5 {
        margin-bottom: 3rem;
    }

    .section-desc {
        color: var(--fam-text-secondary);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-top: 1rem;
    }

    /* Marquee Styles */
    .marquee-wrapper {
        width: 100%;
        overflow: hidden;
        position: relative;
        padding: 1rem 0;
        mask-image: linear-gradient(
            to right,
            transparent,
            black 10%,
            black 90%,
            transparent
        );
        -webkit-mask-image: linear-gradient(
            to right,
            transparent,
            black 10%,
            black 90%,
            transparent
        );
    }

    .logo-marquee {
        width: 100%;
        overflow: hidden;
    }

    .marquee-content {
        display: flex;
        flex-direction: row; /* Enforce row */
        flex-wrap: nowrap; /* Enforce no wrap */
        gap: 2rem;
        animation: scroll 40s linear infinite;
        width: max-content; /* Ensure container is wide enough */
    }

    .marquee-content.reverse {
        animation: scrollReverse 40s linear infinite;
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes scrollReverse {
        0% {
            transform: translateX(-50%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .marquee-content:hover {
        animation-play-state: paused;
    }

    .logo-item {
        flex: 0 0 auto; /* Do not shrink or grow */
        width: 180px; /* Fixed width */
        height: 100px; /* Fixed height */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        background: var(--fam-light-grey);
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 16px;
        transition: all 0.3s ease;
        margin-right: 0; /* managed by gap */
    }

    .logo-item:hover {
        background: #ffffff;
        border-color: var(--fam-orange);
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        z-index: 10;
    }

    .logo-item img {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
        object-fit: contain;
        filter: grayscale(0%);
        opacity: 1;
        transition: all 0.3s ease;
        display: block; /* Remove inline behaviors */
    }

    .logo-item:hover img {
        transform: scale(1.05);
    }

    /* Responsive */
    @media (min-width: 768px) {
        .marquee-content {
            gap: 4rem;
        }

        /* Adjust animation speed for larger screens if needed */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const marquees = document.querySelectorAll(".marquee-content");

        marquees.forEach((marquee) => {
            if (marquee instanceof HTMLElement) {
                marquee.addEventListener("mouseenter", () => {
                    marquee.style.animationPlayState = "paused";
                });

                marquee.addEventListener("mouseleave", () => {
                    marquee.style.animationPlayState = "running";
                });
            }
        });
    });
</script>
