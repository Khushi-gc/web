<section class="safety-section">
  <div class="container">
    <div class="header-section">
      <h2 class="section-title">A DEDICATED TEAM TO<br> ENSURE YOUR SAFETY</h2>
      <div class="section-desc">
        <p>Round-the-clock support ensuring your funds are always secure.</p>
      </div>
    </div>

    <div class="cards-grid">
      {cards.map((card, index) => (
        <div class="safety-card" data-index={index}>
          <div class="card-icon-wrapper">
             <svg xmlns="http://www.w3.org/2000/svg" viewBox={card.viewBox} class="card-icon">
                <path fill-rule="evenodd" d={card.iconPath} clip-rule="evenodd"></path>
             </svg>
          </div>
          <div class="card-text">
            <h3>{card.title}</h3>
            <p>{card.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .safety-section {
    padding: 6rem 1rem;
    background: white;
    color: #1a1a1a;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header */
  .header-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 0.5px solid rgba(0,0,0,0.1);
  }

  @media (min-width: 1024px) {
    .header-section {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.1;
    text-transform: uppercase;
    color: #1a1a1a;
    max-width: 650px;
  }

  @media (min-width: 1024px) {
    .section-title {
        font-size: 3rem; 
    }
  }

  .section-desc p {
    font-size: 1.125rem;
    color: #6B7280;
    max-width: 400px;
    line-height: 1.5;
  }

  /* Cards */
  .cards-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(2, 1fr); /* Only 2 cards requested */
    }
  }

  .safety-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    padding: 2rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 400px;
  }

  .safety-card:hover {
     border-color: transparent;
     box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
  }

  .card-icon-wrapper {
    margin-bottom: 2rem;
  }

  .card-icon {
    width: 6rem;
    height: 6rem;
    fill: #6200EE; /* Default Purple */
    transition: fill 0.3s ease;
  }

  .card-text h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #1a1a1a;
    transition: color 0.3s ease;
  }

  .card-text p {
    font-size: 1rem;
    color: #6B7280;
    line-height: 1.6;
    transition: color 0.3s ease;
  }

  /* Active State */
  .safety-card.active {
    background: #6200EE;
    border-color: #6200EE;
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(98, 0, 238, 0.3);
  }

  .safety-card.active .card-icon {
    fill: white;
  }

  .safety-card.active .card-text h3,
  .safety-card.active .card-text p {
    color: white;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.safety-card');
    
    cards.forEach(card => {
        card.addEventListener('click', () => {
            // Include toggle behavior: if active, remove active. If not, set active.
            // Requirement: "after clicking any one card it should look like second image"
            // Usually this means exclusive selection or simple toggle.
            // Let's implement exclusive selection (accordion style) for a cleaner UI,
            // or just simple toggle. 
            // Design pattern "tabs" usually implies one active. 
            
            // Remove active from all others
            cards.forEach(c => c.classList.remove('active'));
            
            // Add active to clicked
            card.classList.add('active');
        });
    });
  });
</script>
