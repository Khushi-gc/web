    </div>
</section>

<style>
    .header-center {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 4rem;
    }

    .section-desc {
        color: var(--fam-text-secondary);
        font-size: 1.1rem;
        margin-top: 1rem;
    }

    .cards-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .feature-card {
        background: #ffffff;
        padding: 2.5rem 2rem;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05); /* Soft shadow */
        border: 1px solid rgba(0, 0, 0, 0.02);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
    }

    .icon-wrapper {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .bg-purple {
        background: linear-gradient(135deg, #a100ff 0%, #dcd1ff 100%);
        color: white;
    }
    .bg-orange {
        background: linear-gradient(135deg, #ff9a3d 0%, #ffc078 100%);
        color: white;
    }
    .bg-pink {
        background: linear-gradient(135deg, #ff55b3 0%, #ffb6e6 100%);
        color: white;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--fam-text-primary);
    }

    .card-desc {
        color: var(--fam-text-secondary);
        line-height: 1.6;
        font-size: 0.95rem;
    }

    @media (min-width: 768px) {
        .cards-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }
    }

    @media (max-width: 768px) {
        .section {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .header-center {
            margin-bottom: 3rem;
        }

        .heading-md {
            font-size: 1.8rem;
        }

        .section-desc {
            font-size: 1rem;
            padding: 0 0.5rem;
        }

        .feature-card {
            padding: 2rem 1.5rem;
        }
    }
</style>
