<style>
    /* Section Basics */
    .section {
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    .testimonials-header {
        text-align: center;
        width: 100%;
        margin-bottom: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .testimonials-header h2 {
        text-align: center;
        width: 100%;
    }

    .text-orange {
        color: #a100ff; /* Keeping Purple as per user preference */
    }

    .section-desc {
        color: var(--fam-text-secondary);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-top: 1rem;
    }

    /* Grid */
    .stories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
    }

    /* Card */
    .story-card {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 20px;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        transition:
            transform 0.2s,
            box-shadow 0.2s;
        height: 100%;
    }

    .story-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        border-color: #e0e0e0;
    }

    /* Header */
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }

    .profile-row {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: #f3e8ff;
        color: #a100ff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.25rem;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
    }

    .name {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
        color: #333;
    }

    .role {
        font-size: 0.8rem;
        color: #888;
        font-weight: 500;
        margin-top: 2px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .verified-badge {
        font-size: 0.75rem;
        color: #a100ff;
        background: rgba(161, 0, 255, 0.05);
        padding: 4px 10px;
        border-radius: 12px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    /* Body */
    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .goal-section {
        border-left: 3px solid #ff6b6b;
        padding-left: 1rem;
    }

    .label {
        font-size: 0.7rem;
        color: #999;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .goal-text {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
        margin-top: 2px;
        line-height: 1.4;
    }

    /* Timeline */
    .timeline {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .timeline-item {
        display: flex;
        gap: 10px;
        font-size: 0.9rem;
        color: #555;
        line-height: 1.5;
    }

    .dot {
        width: 6px;
        height: 6px;
        background: #ddd;
        border-radius: 50%;
        margin-top: 8px;
        flex-shrink: 0;
    }

    /* Footer / Result */
    .card-footer {
        margin-top: 2rem;
    }

    .result-box {
        background: #f9fafb;
        border: 1px solid #f0f0f0;
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
    }

    .result-box p {
        margin: 0;
        font-weight: 600;
        font-size: 0.95rem;
        color: #a100ff;
    }

    /* Responsive */
    @media (min-width: 1024px) {
        .stories-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @media (max-width: 768px) {
        .stories-grid {
            grid-template-columns: 1fr;
            max-width: 400px;
            margin: 0 auto;
        }

        .testimonials-header {
            padding: 0 1rem;
            margin-bottom: 3rem;
        }
    }
</style>
