<section class="section-download">
    <!-- Desktop QR Code -->
    <div class="qr-container desktop-only">
        <div class="qr-text">
            <div>Download</div>
            <div>FamApp by Trio</div>
        </div>
        <img
            src="/assets/images/images/pages/index/qrcode.png"
            alt="Scan to Download"
            class="qr-code"
        />
    </div>
</section>

<style>
    .section-download {
        /* This section might be sticky or fixed on desktop, or just a section at bottom */
        display: none;
    }

    .qr-container {
        display: flex;
        align-items: center;
        gap: 1rem;
        background: #222;
        padding: 1rem;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .qr-text {
        text-align: right;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .qr-code {
        width: 60px;
        height: 60px;
    }

    @media (min-width: 1024px) {
        .section-download {
            display: block;
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            z-index: 40;
        }
    }
</style>
