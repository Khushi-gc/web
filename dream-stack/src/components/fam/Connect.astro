---
// Connect.astro
import brandVideo from "../../assets/images/brand-video.mp4";
import doodleBg from "../../assets/images/aveka-doodle.png";
---

<section class="section connect-section">
    <div class="doodle-bg" style={`background-image: url(${doodleBg.src});`}>
    </div>

    <div class="container content-wrapper">
        <div class="header-center">
            <h2 class="heading-md">
                Connect, Grow, And <br />
                Thrive With <span class="text-orange">Aveka</span>
            </h2>
            <p class="section-desc">
                Aveka finds universities in your realm of influence that have
                the highest compatibility with your profile & goals. Trust in
                our credibility, let our results speak for themselves, and
                complement your career strategies.
            </p>
        </div>

        <div class="video-container">
            <div class="video-wrapper">
                <video
                    src={brandVideo}
                    poster="/assets/video-poster.jpg"
                    controls
                    class="main-video"
                >
                    Your browser does not support the video tag.
                </video>
                <!-- Custom coloring overlay play button hint if needed, default controls used for simplicity -->
            </div>
        </div>
    </div>
</section>

<style>
    .connect-section {
        position: relative;
        padding: 5rem 0 10rem; /* Add bottom padding to create space before the cut */
        background-color: #ffeef2;
        /* overflow: visible by default */
    }

    /* ... doodle-bg ... */
    .doodle-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-repeat: repeat;
        background-size: 900px auto;
        opacity: 0.1;
        pointer-events: none;
        filter: invert(-1);
    }

    .content-wrapper {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .header-center {
        text-align: center;
        max-width: 800px;
        margin-bottom: 3rem;
    }

    .heading-md {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: #1a1a1a;
    }

    .section-desc {
        color: #4b5563;
        font-size: 1.125rem;
        line-height: 1.6;
        max-width: 700px;
        margin: 0 auto;
    }

    .video-container {
        width: 100%;
        max-width: 900px;
        padding: 0 1rem;
        margin-bottom: -18rem; /* Push video halfway out */
        position: relative;
        z-index: 10;
    }

    .video-wrapper {
        position: relative;
        overflow: hidden;
        background: #000; /* Simple clean background for video */
        aspect-ratio: 16/9;
    }

    .main-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    @media (max-width: 768px) {
        .heading-md {
            font-size: 1.8rem;
        }
    }
</style>
