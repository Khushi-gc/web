<style>
    .footer {
        position: relative;
        background-color: transparent;
        padding: 0 0 6rem;
        font-family: var(--font-primary);
    }

    .footer::before {
        content: "";
        position: absolute;
        top: 140px;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #ffeef2;
        z-index: -1;
    }

    .mb-cta {
        transform: translateY(-50px);
        margin-bottom: 3rem;
    }

    .cta-banner {
        background: linear-gradient(
            135deg,
            #ff8c61 0%,
            #a100ff 100%
        ); /* Orange-ish to Purple */
        border-radius: 30px;
        padding: 5rem 2rem;
        text-align: center;
        color: white;
        box-shadow: 0 20px 50px rgba(161, 0, 255, 0.2);
        position: relative;
        overflow: hidden;
    }

    /* Doodle lines placeholder (CSS radial gradients or simple borders could mimic lines) */
    .cta-banner::before {
        content: "";
        position: absolute;
        top: 20px;
        left: 20px;
        width: 100px;
        height: 100px;
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        transform: scale(0.5);
    }

    .cta-title {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 2.5rem;
        line-height: 1.2;
    }

    .btn-white {
        background: white;
        color: #a100ff;
        padding: 1rem 3rem;
        border-radius: 12px; /* Slightly squarer than pill */
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        display: inline-block;
        transition: transform 0.2s;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-white:hover {
        transform: translateY(-3px);
    }

    .text-orange {
        color: #d64550; /* A darker reddish/pink text */
    }

    /* Footer Content Layout */
    .footer-layout {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding-top: 1rem;
    }

    .brand-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .brand-logo {
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
    }

    .logo-text {
        font-size: 1.8rem;
        font-weight: 900;
        letter-spacing: -0.02em;
        color: #1a1a1a;
    }

    .tagline {
        font-size: 0.8rem;
        color: #666;
        font-weight: 500;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        font-size: 0.9rem;
        color: #444;
        font-weight: 600;
    }

    .contact-row {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .icon {
        font-size: 1rem;
    }

    .footer-nav {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        align-items: center;
    }

    .footer-nav a {
        color: #444;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

    .footer-nav a:hover {
        color: #a100ff;
    }

    @media (min-width: 768px) {
        .footer-layout {
            flex-direction: row;
            justify-content: space-between;
            align-items: flex-end; /* Align bottom */
        }

        .contact-row {
            flex-direction: row;
            gap: 1.5rem;
        }

        .cta-banner {
            padding: 6rem 3rem;
        }

        .footer-nav {
            gap: 2.5rem;
        }
    }
</style>
