<section class="hero-section">
    <div class="video-container">
        <!-- Mobile Video (Default) -->
        <video autoplay muted loop playsinline class="bg-video mobile-video">
            <source
                src="/assets/images/images/pages/index/HomeScreenMobVisual.mp4"
                type="video/mp4"
            />
        </video>
        <!-- Desktop Video (Hidden on mobile) -->
        <video autoplay muted loop playsinline class="bg-video desktop-video">
            <source
                src="/assets/images/images/pages/index/HomeScreenPCVisual.mp4"
                type="video/mp4"
            />
        </video>
        <div class="overlay"></div>
    </div>

    <div class="container hero-content">
        <div class="hero-text-wrapper">
            <img
                src="/assets/images/images/pages/index/FamXBanner.png"
                alt="FamX"
                class="hero-banner-img"
            />
            <h1 class="hero-title">
                spending account<br />
                <span class="hero-subtitle">for</span>
                <span class="text-orange rotating-text">
                    THE AVEKA<br />
                    <span class="hero-subtitle">ECOSYSTEM</span>
                </span>

                <h2 class="sub-heading-rotating">
                    BUILD YOUR <span class="text-orange rotating-text">
                        <span class="word">PERFECT PATH</span>
                        <span class="word">FUTURE</span>
                        <span class="word">CAREER</span>
                    </span>
                </h2>

                <p class="hero-desc">
                    Stop juggling multiple platforms. Plan, fund, and launch
                    your international career from one integrated workspace.
                </p>

                <a href="#" class="btn btn-primary btn-lg hero-cta"
                    >Join Aveka â€” Free Access</a
                >
            </h1>

            <div class="trust-markers">
                <div class="trust-item">
                    <span class="trust-number">13k+</span>
                    <span class="trust-label">Students Guided</span>
                </div>
                <div class="divider"></div>
                <div class="trust-item">
                    <span class="trust-number">$72M+</span>
                    <span class="trust-label">Loans Facilitated</span>
                </div>
            </div>
        </div>
    </div>

    <style>
        .hero-section {
            position: relative;
            height: 100vh; /* Full viewport height */
            min-height: 600px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            overflow: hidden;
            padding-top: 60px; /* Offset for fixed header */
            color: white;
        }

        .video-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .bg-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.3) 0%,
                rgba(0, 0, 0, 0.6) 100%
            );
        }

        .hero-content {
            position: relative;
            z-index: 10;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 3rem;
            max-width: 800px;
        }

        .hero-text-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 900;
            line-height: 0.9;
            text-transform: uppercase;
            margin: 0;
        }

        .hero-subtitle {
            font-size: 2.5rem;
            color: rgba(255, 255, 255, 0.9);
        }

        .sub-heading-rotating {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
        }

        .rotating-text {
            display: inline-flex;
            flex-direction: column;
            height: 1.2em;
            overflow: hidden;
            vertical-align: bottom;
            text-align: left;
        }

        .word {
            animation: rotateWords 6s infinite;
            display: block;
            height: 100%;
        }

        @keyframes rotateWords {
            0%,
            20% {
                transform: translateY(0);
            }
            33%,
            53% {
                transform: translateY(-100%);
            }
            66%,
            86% {
                transform: translateY(-200%);
            }
            100% {
                transform: translateY(0);
            } /* Loop back to start logic needed or correct percentages */
        }

        /* Better loop: 3 words */
        /* 0-33: word 1 */
        /* 33-66: word 2 */
        /* 66-100: word 3 */
        /* This generic keyframe logic is tricky without JS or precise steps. 
       Let's stick to simple CSS animation for now or just static if it fails. 
       Actually, standard "slide up" animation:
       0% { transform: translateY(0); }
       30% { transform: translateY(0); }
       33% { transform: translateY(-1.2em); }
       63% { transform: translateY(-1.2em); }
       66% { transform: translateY(-2.4em); }
       96% { transform: translateY(-2.4em); }
       100% { transform: translateY(0); }
    */

        .hero-desc {
            font-size: 1.1rem;
            line-height: 1.5;
            max-width: 600px;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 1rem;
        }

        .hero-cta {
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            border-radius: 100px;
        }

        .trust-markers {
            display: flex;
            align-items: center;
            gap: 2rem;
            padding: 1rem 2rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .divider {
            width: 1px;
            height: 40px;
            background: rgba(255, 255, 255, 0.2);
        }

        .trust-item {
            display: flex;
            flex-direction: column;
            align-items: center; /* Center on mobile */
        }

        .trust-number {
            font-size: 1.5rem;
            font-weight: 800;
            color: white;
        }

        .trust-label {
            font-size: 0.8rem;
            height: 26px;
        } /* UPI logo usually thicker */

        @media (min-width: 768px) {
            .mobile-video {
                display: none;
            }
            .desktop-video {
                display: block;
            }

            .hero-banner-img {
                width: 220px;
            }
            .hero-title {
                font-size: 4rem;
            }

            .trust-markers {
                flex-direction: row;
                justify-content: center;
                gap: 2rem;
            }

            .powered-by {
                flex-direction: row;
                gap: 1rem;
                border-left: 1px solid rgba(255, 255, 255, 0.2);
                padding-left: 1rem;
                height: 3rem;
            }
        }
    </style>

    <script>
        // Simple word rotation
        const words = document.querySelectorAll(".word");
        let currentIndex = 0;

        if (words.length > 0) {
            setInterval(() => {
                words[currentIndex].style.display = "none";
                currentIndex = (currentIndex + 1) % words.length;
                words[currentIndex].style.display = "inline";
            }, 2000);
        }
    </script>
</section>
