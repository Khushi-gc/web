<section class="section section-hiring">
    <div class="container split-layout">
        <div class="text-col">
            <h2 class="heading-lg">
                Want to shape finance<br />for the <span class="text-orange"
                    >next gen?</span
                >
            </h2>
            <button class="btn btn-primary btn-full-mobile">Join the Fam</button
            >
        </div>

        <div class="image-col">
            <img
                src="/assets/images/images/pages/index/hiringImage.png"
                alt="Hiring"
                class="hiring-img"
            />
        </div>
    </div>
</section>

<style>
    .section-hiring {
        background: var(--fam-light-grey);
    }

    .split-layout {
        display: flex;
        flex-direction: column-reverse; /* Interact CTA first on mobile logic? Or text first. HTML has image first (right aligned on desktop). */
        gap: 3rem;
        align-items: center;
    }

    .text-col {
        text-align: center;
    }

    .hiring-img {
        width: 100%;
        max-width: 500px;
    }

    @media (min-width: 768px) {
        .split-layout {
            flex-direction: row;
            text-align: left;
            justify-content: space-between;
        }

        .image-col {
            order: 2;
        }
        .text-col {
            order: 1;
            text-align: left;
        }
    }
</style>
