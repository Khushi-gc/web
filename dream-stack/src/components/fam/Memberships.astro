<section class="section container">
    <div class="text-center mb-5">
        <h2 class="heading-md">
            Memberships <span class="text-orange">tailor-made</span><br />for
            your needs
        </h2>
    </div>

    <div class="cards-grid">
        <div class="card-item">
            <img
                src="/assets/images/images/pages/index/Classic.png"
                alt="Classic Member"
            />
        </div>
        <div class="card-item">
            <img
                src="/assets/images/images/pages/index/HigherDepositLimits.png"
                alt="Higher Deposit Limits"
            />
        </div>
        <div class="card-item">
            <img
                src="/assets/images/images/pages/index/Ultra.png"
                alt="Ultra Member"
            />
        </div>
    </div>
</section>

<style>
    .text-center {
        text-align: center;
    }
    .mb-5 {
        margin-bottom: 3rem;
    }

    .cards-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        justify-items: center;
    }

    .card-item img {
        width: 100%;
        max-width: 370px;
        height: auto;
        transition: transform 0.3s ease;
    }

    .card-item:hover img {
        transform: translateY(-10px);
    }

    @media (min-width: 768px) {
        .cards-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }
    }
</style>
