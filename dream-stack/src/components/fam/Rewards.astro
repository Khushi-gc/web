<style>
    .section-rewards {
        position: relative;
        background: linear-gradient(180deg, #111 0%, #000 100%);
    }

    .header-center {
        text-align: center;
        margin-bottom: 3rem;
    }

    .subtitle {
        margin-top: 1rem;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .rewards-grid {
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    .perks-col {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 20px;
    }

    .divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 1rem 0 2rem;
    }

    .perks-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .perk-item {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .image-col {
        display: flex;
        justify-content: center;
    }

    .phone-img {
        max-width: 100%;
        height: auto;
        max-height: 500px;
    }

    @media (min-width: 768px) {
        .rewards-grid {
            flex-direction: row;
            align-items: center;
            gap: 4rem;
        }

        .perks-col,
        .image-col {
            flex: 1;
        }
    }
</style>
