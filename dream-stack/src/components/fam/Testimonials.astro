<style>
    .text-center {
        text-align: center;
    }
    .mb-5 {
        margin-bottom: 3rem;
    }

    .testimonials-scroll {
        display: flex;
        gap: 1.5rem;
        overflow-x: auto;
        padding-bottom: 2rem;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
    }

    .testimonial-card {
        flex: 0 0 300px;
        background: #111;
        border-radius: 20px;
        overflow: hidden;
        scroll-snap-align: center;
        border: 1px solid #222;
        display: flex;
        flex-direction: column;
    }

    .profile-img {
        height: 200px;
        background-size: cover;
        background-position: center;
    }

    .content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .quote {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--fam-text-primary);
    }

    .desc {
        color: var(--fam-text-secondary);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        line-height: 1.5;
        flex-grow: 1;
    }

    .author {
        color: var(--fam-text-primary);
        font-weight: 600;
        margin-top: auto;
    }

    @media (min-width: 768px) {
        .testimonials-scroll {
            justify-content: center;
            flex-wrap: wrap; /* Or use carousel for desktop if strict match required, but wrap is safer for static */
            overflow-x: visible;
        }

        .testimonial-card {
            flex: 0 0 30%;
        }
    }
</style>
