---
import journeyImg from "../../assets/images/development-knowledge-study-education-concept.jpg";
// Using a relevant image for "Journey" / "Education"
---

<section class="section container">
    <div class="split-layout reverse-mobile">
        <div class="text-col">
            <span class="badge-pill">Financing Freedom</span>
            <h2 class="heading-md">
                Empowering Your <br />
                <span class="text-orange">Global Ambitions</span>
            </h2>
            <p class="section-desc">
                From funding to specialized counseling, Aveka provides the
                targeted resources you need. We don't just give loans; we build
                education pathways.
            </p>

            <div class="stats-row">
                <div class="stat">
                    <span class="stat-num text-orange">72M+</span>
                    <span class="stat-label">Loans</span>
                </div>
                <div class="stat">
                    <span class="stat-num text-purple">13k+</span>
                    <span class="stat-label">Students</span>
                </div>
            </div>

            <a href="#" class="btn btn-primary btn-cta">Explore Funding</a>
        </div>

        <div class="image-col">
            <div class="image-wrapper">
                <img
                    src={journeyImg.src}
                    alt="Empowering Your Journey"
                    class="rounded-img"
                />
                <!-- Decorative element -->
                <div class="floating-badge">
                    <span>ðŸš€</span> 95% Approval
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .split-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
    }

    .badge-pill {
        display: inline-block;
        padding: 0.4rem 1rem;
        background: rgba(161, 0, 255, 0.1);
        color: var(--fam-orange);
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .section-desc {
        color: var(--fam-text-secondary);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .stats-row {
        display: flex;
        gap: 3rem;
        margin-bottom: 2.5rem;
    }

    .stat {
        display: flex;
        flex-direction: column;
    }

    .stat-num {
        font-size: 2rem;
        font-weight: 800;
    }

    .text-purple {
        color: #a100ff;
    }

    .stat-label {
        color: var(--fam-text-secondary);
        font-weight: 500;
    }

    .image-wrapper {
        position: relative;
    }

    .rounded-img {
        width: 100%;
        height: auto;
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .floating-badge {
        position: absolute;
        bottom: 30px;
        left: -20px;
        background: white;
        padding: 0.8rem 1.5rem;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        display: flex;
        gap: 0.5rem;
        font-weight: 700;
        font-size: 0.95rem;
        color: var(--fam-text-primary);
    }

    @media (min-width: 960px) {
        .split-layout {
            grid-template-columns: 1fr 1fr;
            gap: 5rem;
        }

        .floating-badge {
            left: -30px;
        }
    }
</style>
